<div class="row">
  <div class="col-12 col-md-3">
     <h2>Your Chat Rooms</h2>
    <div class="mb-3 mt-3">
      <%= link_to new_club_room_path(@club), class: "btn btn-main" do %>
        Create a room
      <% end %>
    </div>

    <% if @rooms.present? %>
      <nav class="nav flex-column">
        <% @rooms.each do |room| %>
          <%= link_to room.name, club_room_path(@club, room), class: "nav-link room-nav-link" %>
        <% end %>
      </nav>
    <% else %>
      <div class="text-muted">
        The are no rooms
      </div>x
    <% end %>
  </div>
</div>
