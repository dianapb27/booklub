<div class= "navbar navbar-expand-sm navbar-transparent navbar-lewagon">
  <%= link_to "/", class: "navbar-brand text-white ml-3" do %>
    <h1>Booklub</h1>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <div class= "search row align-right" >
            <%= form_tag clubs_path, method: :get do %>
            <div class="search-container">
              <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              id: "search-field",
              placeholder: "search for clubs"
              %>
              <% end %>

          </div>


        <li class="nav-item dropdown ml-4 mr-4">
          <% if current_user.profile_photo.attached? %>
            <%= cl_image_tag current_user.profile_photo.key, class: "avatar dropdown-toggle ml-2", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= image_tag "https://images.unsplash.com/photo-1452882628481-6a2da9481239?ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <h6 class="border-bottom pl-3 py-1">Hi <strong><%= current_user.first_name %></strong>! ðŸ˜„</h6>
            <%= link_to "My Profile", user_path(current_user), class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>


       <<div class= "search row align-right" >
            <%= form_tag clubs_path, method: :get do %>
            <div class="search-container">
              <%= text_field_tag :query,
                params[:query],
                class: "form-control",
                id: "search-field",
                placeholder: "search for clubs"
              %>
            <% end %>
          </div>
        <li class="nav-item ml-4 mr-1 hvr-underline">
          <%= link_to "Login", new_user_session_path, class: "nav-link text-white" %>
        </li>
         <li class="nav-item ml-1 mr-4 hvr-underline">
          <%= link_to "Sign Up", new_user_registration_path, class: "nav-link text-white" %>
        </li>
      </li>
      <% end %>
    </ul>
  </div>
</div>
