<div class= "navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "/", class: "navbar-brand text-white ml-3" do %>
    <h1>Booklub</h1>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <div class= "search row align-right" >
            <%= form_tag clubs_path, method: :get do %>
              <%= text_field_tag :query,
                params[:query],
                class: "form-control",
                placeholder: "search for clubs"
              %>
            <% end %>
          </div>
        <li class="nav-item dropdown ml-4">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
       <div class= "search row align-right" >
          <%= form_tag clubs_path, method: :get do %>
            <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "search for clubs"
            %>
          <% end %>
        </div>
        <li class="nav-item ml-3 mr-1">
          <%= link_to "Login", new_user_session_path, class: "nav-link text-white" %>
        </li>
         <li class="nav-item ml-1">
          <%= link_to "Sign Up", new_user_session_path, class: "nav-link text-white" %>
        </li>
      </li>
      <% end %>
    </ul>
  </div>
</div>
