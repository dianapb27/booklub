<div class="jumbotron jumbotron-fluid m-0 bg-transparent d-flex flex-column justify-content-end">
  <div class="container j-container d-flex flex-column mb-1">
    <p>
      <span id="banner-typed-text"></span>
    </p>
  </div>
 <!--    <h1 id="feature-header" class="display-4 m-0">Join booklubs</h1>
    <h1 id="feature-header" class="display-4 m-0">discuss books</h1>
    <h1 id="feature-header" class="display-4 m-0">meet book lovers!</h1>
