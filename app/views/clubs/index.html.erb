<div class="container py-5 mt-4">

  <%= render partial: 'form' %>

  <div class="testing" style="width: 800px; margin: 0 auto;">
    <div class="container">
      <form id="city-name">
        <div class="form-row">
          <div class="col-9">
            <input type="text" class="form-control" placeholder="Change me :)">
          </div>
          <div class="col-auto">
            <button type="submit" class="btn btn-primary mb-2">Submit</button>
          </div>
        </div>
      </form>
    </div>
  </div>

  <h1 class="display-3 primary-header"><em>Let's find a bookclub!</em></h1>
  <div class="row row-cols-1 row-cols-md-2 py-5">
    <% @clubs[0..3].each do |club| %>
    <div class="col mb-4">
      <div class="card mb-3" style="max-width: 540px;">
        <div class="row no-gutters">
          <div class="col-md-4">
           <% if club.cover_photo.attached? %>
             <img src="<%= @books[:image_url] %>" class="card-img-top"/>
            <% else %>
            <img class="card-img-top background-image: cover"
              src="https://images.unsplash.com/photo-1575709527142-a93ed587bb83?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&auto=format&fit=crop&w=700&q=80"
              alt="">
            <% end %>
          </div>
          <div class="col-md-8 d-flex flex-column">
            <div class="card-body">
              <h5 class="card-title"><%= club.name %></h5>
              <p class="card-text"><%= club.description %></p>
            </div>
            <div class="card-footer">
              <small class="text-muted"><em>Created by <%= club.user.username.capitalize()%></em></small>
              <h4> <%= link_to "Join me!", club_path(club) %> </h4>

            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <div class="create-action">
    <h3 class="display-4"><em>Not what you're looking for?</em></h3>
    <h2 class="display-2" style="font-weight: 700;"><%= link_to "Invent your own club...", new_club_path %></h2>
  </div>

  <div class="row row-cols-1 row-cols-md-2 py-5">
    <% @clubs.drop(4).each do |club| %>
    <div class="col mb-4">
      <div class="card mb-3" style="max-width: 540px;">
        <div class="row no-gutters">
          <div class="col-md-4">
            <% if club.cover_photo.attached? %>
             <img src="<%= @books[:image_url] %>" class="card-img-top"/>
            <% else %>
            <img class="card-img-top background-image: cover"
              src="https://images.unsplash.com/photo-1575709527142-a93ed587bb83?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&auto=format&fit=crop&w=700&q=80"
              alt="">
            <% end %>
          </div>
          <div class="col-md-8 d-flex flex-column">
            <div class="card-body">
              <h5 class="card-title"><%= club.name %></h5>
              <p class="card-text"><%= club.description %></p>
            </div>
            <div class="card-footer">
              <small class="text-muted">Created by <%= club.user.username.capitalize() %></small>
              <h4> <%= link_to "Wanna see more??!", club_path(club) %> </h4>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>


<%= javascript_pack_tag 'fetch-books' %>
