<div class="club-cover">
  <% if @club.cover_photo.attached? %>
    <%= cl_image_tag @club.cover_photo.key, class: "club-cover-photo" %>
  <% else %>
    <img src="https://images.unsplash.com/photo-1598646506899-ac6be1000c2f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1052&q=80" alt="Club cover photo" class="club-cover-photo">
  <% end %>
  <div id="overlay"></div>
  <h1><%= @club.name %></h1>
  <% unless @club_membership.id || @club.user == current_user %>
    <%= simple_form_for [ @club, @club_membership ] do |f| %>
      <%= f.submit "Join this club", class: "btn btn-main join-btn" %>
    <% end %>
  <% end %>
  <% if @club_membership.id %>
    <%= link_to "Leave club", club_membership_path(@club_membership),
                method: :delete,
                data: { confirm: "Are you sure you want to leave this club?" },
                class: "btn btn-sec leave-btn"
    %>
  <% end %>
</div>

<div class="container mt-5">
  <div class="row">
    <div class="col-4">
      <div class="row justify-content-center">
        <div class="col-12">
          <% if @club_membership.id || @club.user == current_user %>
            <p><strong>Share with friends</strong></p>
            <%= social_share_button_tag(@club.name) %>
          <% end %>
          <h4>Currently Reading</h4>
          <img src="https://lithub.com/wp-content/uploads/sites/2/2019/02/485747c67fc7dfb54adb3de4b0e1f4d1.gif" alt="book cover" class="card-img h-75 w-50">
          <h6><%= @club.book.title %></h6>
          <p><%= @club.book.author %></p>
        </div>
      </div>
      <div class="row mt-5">
        <div class="col-12">
          <h4>Upcoming Events</h4>
        </div>
      </div>
    </div>
    <div class="col-8 club-tabs">
      <ul class="nav nav-pills mb-3" id="myTab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="discussion-tab" data-toggle="tab" href="#discussion" role="tab" aria-controls="discussion" aria-selected="true">Discussion Topics</a>
        </li>
        <% if @club_membership.id || @club.user == current_user %>
          <li class="nav-item">
            <a class="nav-link" id="chat-tab" data-toggle="tab" href="#chat" role="tab" aria-controls="chat" aria-selected="false">Chat</a>
          </li>
        <% end %>
        <% if @club_membership.id || @club.user == current_user %>
          <li class="nav-item">
            <a class="nav-link" id="members-tab" data-toggle="tab" href="#members" role="tab" aria-controls="members" aria-selected="false">Members (<%= @club.club_memberships.count + 1 %>)</a>
          </li>
        <% end %>
        <li class="nav-item">
          <a class="nav-link" id="about-tab" data-toggle="tab" href="#about" role="tab" aria-controls="about" aria-selected="false">About</a>
        </li>
      </ul>
      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="discussion" role="tabpanel" aria-labelledby="discussion-tab">This is the tab for discussion topics</div>
        <div class="tab-pane fade" id="chat" role="tabpanel" aria-labelledby="chat-tab">
          <ul>
            <% @club.rooms.each do |room| %>
            <li> <%= room.name %> </li>
            <% end  %>
          </ul>
        </div>
        </div>
        <div class="tab-pane fade" id="members" role="tabpanel" aria-labelledby="members-tab">This is the tab for the members
          <% if @club.user.profile_photo.attached? %>
            <%= cl_image_tag @club.user.profile_photo.key, class: "avatar-large" %>
          <% else %>
            <img src="https://images.unsplash.com/photo-1452882628481-6a2da9481239?ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80" alt="" class="avatar-large">
          <% end %>
          <% @club.users.each do |user| %>
            <% if user.profile_photo.attached? %>
              <%= cl_image_tag user.profile_photo.key, class: "avatar-large" %>
            <% else %>
              <img src="https://images.unsplash.com/photo-1452882628481-6a2da9481239?ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80" alt="" class="avatar-large">
            <% end %>
          <% end %>
        </div>
        <div class="tab-pane fade" id="about" role="tabpanel" aria-labelledby="about-tab">This is the tab for about</div>
      </div>
    </div>
  </div>
</div>

