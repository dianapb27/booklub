<div class="container mt-4 pt-5">
    <div class="main-body">
          <nav class="main-breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><%= link_to "Home", root_path, class: "" %></li>
              <li class="breadcrumb-item active">User Profile</li>
            </ol>
          </nav>

          <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                    <% if current_user.profile_photo.attached? %>
                      <%= cl_image_tag current_user.profile_photo.key, class: "avatar-profile" %>
                    <% else %>
                      <%= image_tag "https://images.unsplash.com/photo-1452882628481-6a2da9481239?ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80", class: "avatar-profile" %>
                    <% end %>
                    <div class="mt-3">
                      <h4><%= current_user.username%> </h4>
                      <p class="text-muted font-size-sm">San Diego, CA</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-8">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Full Name</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= current_user.first_name %> <%= current_user.last_name%>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= current_user.email%>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Favorite Genre</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= Faker::Book.genre %>
                    </div>
                  </div>
                </div>
              </div>
              <div class="row gutters-sm">
                <div class="col-sm-6 mb-3">
                  <div class="card h-100">
                    <div class="card-body">
                      <h6 class="d-flex align-items-center text-center mb-3">Book Clubs I've Joined</h6>
                      <small>
                        <% if not @user.club_memberships.empty? %>
                        <ul>
                          <% @user.clubs.each do |club| %>
                            <li>
                            <%= link_to club.name, club_path(club), class: "link-to-club" %>
                            </li>
                            <% end %>
                        <% else %>
                        <h4 class="my-5">You don't have any clubs, <%= link_to "join one now!", clubs_path %></h4 class="my-5">
                        <% end %>
                        </ul>
                    </small>
                    </div>
                  </div>
                </div>
                <div class="col-sm-6 mb-3">
                  <div class="card h-100">
                    <div class="card-body">
                      <h6 class="d-flex align-items-center text-center mb-3">Book Clubs I've Created</h6>
                      <small>
                        <% if not @user.created_clubs.empty? %>
                        <ul>
                          <% @user.created_clubs.each do |created_club| %>
                            <li>
                            <%= link_to created_club.name, club_path(created_club), class: "link-to-club" %>
                            </li>
                            <% end %>
                        <% else %>
                        <h4 class="my-5">You don't have any clubs, <%= link_to "create one now!", new_club_path %></h4 class="my-5">
                        <% end %>
                        </ul>
                      </small>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
    </div>
