
<div class="container">
  <br>
  <% if @books.nil? %>
    <h2 class="mt-5 text-center">Let's find a book!</h2>
    <div class="mt-5"><%= render 'clubs/form' %></div>
  <% else %>
    <div class="mt-5"><%= render 'clubs/form' %></div>
    <div class="row row-cols-1 row-cols-md-2 py-5">
    <% @books[0..9].each do |book| %>
      <div class="col mb-4">
        <div class="card mb-3" style="max-width: 540px;">
          <div class="row no-gutters">
            <div class="col-md-4">
              <a href="books/external?external_id=<%="#{book[:book_id]}" %>">
                <%= image_tag(book[:image_url], class: "w-50") %>
              </a>
            </div>
            <div class="col-md-8 d-flex flex-column">
              <div class="card-body">
                <h5 class="card-title"><%= book[:title] %></h5>
                <p class="card-text"><%= book[:author] %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
  </div>
</div>

