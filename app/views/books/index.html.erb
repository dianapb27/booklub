<div class="container">
  <br>
  <% if @books.nil? %>
    <h2 class="mt-5 text-center">Let's find a book!</h2>
    <div class="mt-5 api-call"><%= render 'clubs/form' %></div>
    <div class="powered-by text-right">
      <small>powered by</small>
      <img src="https://s.gr-assets.com/assets/press/logo-fe2ef7d630d5f23daf46230e8592cd99.png" 
        alt="goodreads logo"
        class="goodreads-logo">
    </div>
    <div id="loader" class="loader-5 mx-auto d-none"><span></span></div>
    
  <% else %>
    <div class="mt-5 api-call"><%= render 'clubs/form' %></div>
    <div class="powered-by text-right">
      <small>powered by</small>
      <img src="https://s.gr-assets.com/assets/press/logo-fe2ef7d630d5f23daf46230e8592cd99.png" 
        alt="goodreads logo"
        class="goodreads-logo mt-0">
    </div>
    <div id="loader" class="loader-5 mx-auto d-none"><span></span></div>
    <div class="row row-cols-1 row-cols-md-2 py-5">
    <% @books[0..9].each do |book| %>
      <div class="col mb-4">
        <div class="card mb-3" style="max-width: 540px;">
          <div class="row no-gutters">
            <div class="col-md-4">
              <a href="books/external?external_id=<%="#{book[:book_id]}" %>">
                <%= image_tag(book[:image_url], class: "w-50") %>
              </a>
            </div>
            <div class="col-md-8 d-flex flex-column">
              <div class="card-body">
                <h5 class="card-title"><%= book[:title] %></h5>
                <p class="card-text">by <%= book[:author] %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

