<div class="container">
  <div class="card mb-3 mt-5">
    <div class="row no-gutters">
      <div class="col-md-4">
        <img src="<%= @book.image_url %>" class="img-fluid w-50 ml-3 mt-3 mb-3" alt="...">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h3 class="card-title"><%= @book.title %></h3>
          <h5 class="card-title"> <%= @book.author %></h5>
          <p class="card-text"><%= @book.syllabus %></p>
        </div>
      </div>
    </div>
  </div>
  <%= link_to "Back", :back, class: "btn btn-sec" %>
</div>
