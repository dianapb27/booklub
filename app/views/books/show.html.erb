<div class="container">

  <div class="card mb-3">
    <div class="row no-gutters">
      <div class="col-md-4">
        <img src="<%= @book[:thumbnail] %>" class="img-fluid" alt="...">
        <%= link_to "Select this book for your bookclub", root_path %>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"> <%= @book[:authors][0] %></h5>
          <p class="card-text"><%= @book[:description] %></p>
          <p class="card-text"><%= @book[:avg_rating] %></p>
        </div>
      </div>
    </div>
  </div>

  <%= link_to "Back to Browse", clubs_path, class: "btn btn-primary" %>
</div>
